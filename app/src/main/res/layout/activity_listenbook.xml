<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".Listenbook">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#000"
   app:layout_constraintBottom_toTopOf="@id/l1"
    app:layout_constraintVertical_weight="4"
    android:src="@drawable/bg17"
    android:id="@+id/coverimage"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DAF3E1"
        app:layout_constraintVertical_weight="2"
        android:paddingTop="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:layout_gravity="left"
            android:src="@drawable/vd_play"
            android:id="@+id/play" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:layout_gravity="left"
            android:src="@drawable/vd_pause"
            android:id="@+id/pause" />
<ImageView
    android:layout_width="44dp"
    android:padding="4dp"
    android:layout_height="44dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="40dp"
    android:src="@drawable/up"
    android:background="@drawable/bgxml1"
    android:id="@+id/fast" />

        <ImageView
            android:id="@+id/slow"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end"
            android:layout_margin="26dp"
            android:background="@drawable/bgxml1"
            android:padding="4dp"
            android:src="@drawable/down" />


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>