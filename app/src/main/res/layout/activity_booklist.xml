<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg8"
    tools:context=".Booklist">

    <LinearLayout
        android:id="@+id/book1"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        android:background="#000"
        app:layout_constraintRight_toLeftOf="@id/book2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/bg17" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/book2"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_height="220dp"
        android:background="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/book1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg18" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/book3"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        android:background="#000"
        app:layout_constraintRight_toLeftOf="@id/book4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book1"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg19" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/book4"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_height="220dp"
        android:background="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/book3"
        app:layout_constraintTop_toBottomOf="@id/book2"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg20" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>